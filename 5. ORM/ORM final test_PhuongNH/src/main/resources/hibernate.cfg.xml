<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">
			com.microsoft.sqlserver.jdbc.SQLServerDriver
		</property>
		<property name="hibernate.connection.url">
			jdbc:sqlserver://localhost:1433;databaseName=hotel_management;encrypt=true;trustServerCertificate=true;
		</property>
		
		<property name="hibernate.connection.username">
			sa
		</property>
		<property name="hibernate.connection.password">
			12345
		</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>
		<property name="hibernate.dialect">
			org.hibernate.dialect.SQLServerDialect
		</property>
		<property name="hbm2ddl.auto">update</property>
		<!-- Show all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- List mapping annotation classes -->
		<mapping class="fa.training.entities.Customer"/>
		<mapping class="fa.training.entities.Room"/>
	</session-factory>
</hibernate-configuration>